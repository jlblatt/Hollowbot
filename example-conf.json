{
    "name" : "Hollowbot Clone",
    "version" : "1.0a1",
    "description" : "github clone of Hollowbot",
    "author" : "Author Name",
    "author_url" : "/user/xxx/",
    "author_email" : "foo@bar.com",

    "db_host" : "db_host",
    "db_name" : "db_name",
    "db_user" : "db_user",
    "db_pass" : "db_pass",

    "reddit_username" : "userxxx",
    "reddit_password" : "passxxx",

    "logging" : true,
    "logtypes" : ["exception", "error", "stat", "message"],
    "logfile" : "log.txt",

    "crawl_subreddits" : [
        {
            "subreddit" : "hollowbot",
            "sort" : ["all", "hot", "new", "rising", "controversial", "top", "gilded"]
        }
    ],

    "crawl_urls" : [
        "http://www.reddit.com/r/hollowbot/"
    ],

    "page_limit" : 5,
    "links_per_page" : 25,

    "comment_limit_per_request" : 200,
    "comment_depth_per_request" : 5,
    "comment_depth_total" : 3,
    "comment_siblings_total": 0,
    "comment_traverse_threshold" : 50,
    "autoget_lte_20" : false,
    "autoget_threshold" : 10,
    "comment_sort" : ["confidence", "top", "new", "hot", "controversial", "old", "random"],

    "find_links_after" : 3600,
    "recrawl_links_after" : 1800,
    "delete_links_after" : 86400,
    "delete_comments_after" : 604800,

    "quit" : true,

    "http_retries" : 3,
    "sleep" : 10
}